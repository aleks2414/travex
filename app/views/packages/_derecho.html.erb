<div id="contact2">
		<h2 class="titulo">¿Cuántas habitaciones necesitas?</h2>
	<hr>

<%= form_for [@block, @package], id: "new_package" do |f| %>

  <div class="field">
    <%= f.label :número_de_habitaciones %>
    <%= f.select :habitaciones, [["1", 1], ["2", 2], ["3", 3], ["4", 4]],{:prompt => '¿Cuántas habitaciones necesitas?'}, required: true%>
  </div>

  <div class="actions">
    <%= f.submit "Reservar", class: "button button_blue button_block" %>
  </div>

<% end %>

</div>