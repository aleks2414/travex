<%= render 'welcome/bread' %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3>Órdenes Recibidas</h3>
        <hr>
      </div>
      <div class="panel-body">
 <div class="content table-responsive table-full-width">
			<table class="table table-hover table-striped">
				<thead>
					<th>ID</th>
					<th>Bloque</th>
					<th>Experiencia</th>
					<th>Email</th>
					<th>Número de adultos</th>
					<th>Número de niños</th>
					<th>Habitación doble</th>
					<th>Habitación triple</th>
					<th>Habitación cuadruple</th>
					<th>Menos Extra</th>
					<th>Total pagado</th>
					<th colspan="3"></th>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%= order.id%></td>
						<td><%= order.block.id%></td>
						<td><%= order.block.experience.nombre %></td>
						<td><%= order.user.email %></td> 
						<td><%= order.many%></td>
						<td><%= order.many_n%></td>
						<td><%= order.hab_doble%></td>
						<td><%= order.hab_triple%></td>
						<td><%= order.hab_cuadrupple%></td>
						<td><%= order.menor_ex%></td>
						<td><%= number_to_currency order.total%></td>
            <td><%= link_to 'Ver más', block_order_path(order.block, order) %></td>
            <td><%= link_to 'Editar', edit_block_order_path(order.block, order) %></td>
            <td><%= link_to 'Eliminar', block_order_path(order.block, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
