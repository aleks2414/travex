<%= render 'welcome/bread' %>

<div id="tablon">
<div class="container">
<div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>ID</th>
          <th>Status</th>
          <th>Nombre</th>
          <th>Categoría</th>
          <th># Paquetes</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @experiences.each do |experience| %>
          <tr>
            <td><%= experience.id%></td>
            <td><%= experience.disponible %></td>
            <td><%= experience.nombre %></td>
            <td><%= experience.categoria %></td>
            <td><%= experience.blocks.count %></td>
            <td><%= link_to 'Ver más', experience %></td>
            <td><%= link_to 'Editar', edit_experience_path(experience) %></td>
            <td><%= link_to 'Eliminar', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   </div>
</div>